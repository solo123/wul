= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :trans_type
    = f.text_field :trans_type
  .field
    = f.label :operation_amount
    = f.text_field :operation_amount
  .field
    = f.label :account_before
    = f.text_field :account_before
  .field
    = f.label :account_after
    = f.text_field :account_after
  .field
    = f.label :frozen_before
    = f.text_field :frozen_before
  .field
    = f.label :frozen_after
    = f.text_field :frozen_after
  .actions
    = f.submit 'Save'
