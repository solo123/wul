.header
  .container
    .row.wytz
      .span9.span-inline
        %a.btn.btn-default.btn-sm{:href=> "/invests"}
          返回投资中心
        .product-title
          %h1
            我要投资 /
            转让专区
      .span3.span-balance
        = render "shared/balance"
.wytz-dqb
  .container
    .invest-list-frame
      - dict = {'fixed' => '定存宝',
                  'month' => '月月盈'}
      %table.table
        %thead
          %tr
            %th
              名称
            %th
              实际收益率
            %th
              剩余期限
            %th
              转让价格
            %th
              剩余金额
            %th
              操作
        %tbody
          - @invests.each do |obj|
            = render 'invests/list_col_onsale', obj: obj , dict: dict
      .invest-pager-container
        .invest_pagination
          = will_paginate @fixed_deposits, :container => false











