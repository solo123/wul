

<%= form_for(resource, :as => resource_name, html: {class: "form-signin"}, :url => registration_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Please Sign up</h2>
  <%= devise_error_messages! %>

  <%#= f.label :email %>
  <%= f.email_field :email, class: "form-control", placeholder: "Email address", :autofocus => true %>

  <%#= f.label :password %>
  <%= f.password_field :password, class: "form-control password_confirmation", placeholder: "Password" %>

  <%#= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>

  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>


  <%= render "devise/shared/links" %>
<% end %>


