= form_for(resource, :as => resource_name, html: {class: "form-signin"}, :url => registration_path(resource_name)) do |f|
  %h2.form-signin-heading Please Sign up
  = devise_error_messages!
  = f.text_field :login, class: "form-control", placeholder: "Login", :autofocus => true
  = f.email_field :email, class: "form-control", placeholder: "Email address"
  = f.password_field :password, class: "form-control password_confirmation", placeholder: "Password"
  = f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation"
  = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
  = render "devise/shared/links"
