    %ul.nav.nav-tabs{:role=>"tablist"}
      %li.active
        %a{:href=>"#detail", :role=>"tab", 'data-toggle'=>"tab"}
          详细信息
      %li
        %a{:href=>"#ownerlist", :role=>"tab", 'data-toggle'=>"tab"}
          购买列表
