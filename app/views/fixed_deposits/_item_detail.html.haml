.container.transfer
  .row
    .col-md-8.modedqb1
      .model-box
        .head
          %h2
            = obj.product_name
            = obj.deposit_number
        .profit
          %dl.f
            %dt 总额度
            %dd
              %ins ￥
              %em
                = number_with_precision(obj.total_amount, precision: 0, delimiter: ',')
          %dl
            %dt
              %b 年化收益率
            %dd
              %em
                = obj.annual_rate.to_i
              %span
                - num = obj.annual_rate.to_s.split(".")
                - frac = num.count > 1 ? num[1].to_s : 0
                = "."
                = frac
              ="%"
              -#= succeed "%" do
              -#  %span .00
          %dl
            %dt 投资期限
            %dd
              %em
                = obj.repayment_period
              个月
        .working-day 定存宝 每工作日 10:30、14:30、20:00 更新产品
        .expl
          %ul
            %li
              %ul.ratio-per
                %li
                  - current_progress = (obj.total_amount - obj.free_invest_amount) * 100 / obj.total_amount
                  .progress
                    .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => current_progress, "aria-valuenow" => "30", :role => "progressbar", :style => "width: #{current_progress}%;"}
                  .progress-number
                    %b
                      = "#{current_progress}%"
                %li
                  %span 60%
            %li 发布时间：2014.06.21
            %li
              %img{:src => image_url("main/wytz5.png")}
                %p 100%本息保障
    .col-md-4.modedqb
      .model-box
        .head
          %h2 投资金额
          %b.tzjedb
            单笔最多可投
            = succeed "\u{5143}" do
              %em 122,000
        .doned-left
          %ul
            %li
              %dl.dl-horizontal.dldt
                %dt.dl-horizontaldt
                  %input.form-control{:placeholder => "Text input", :type => "text"}/
                %dd 元
            %li
              %ul.dldd
                %li 收益处理方式
                %li
                  收益返还
                  %span.badge ?
            %li
              %ul.dldd
                %li 到期总收益
                %li
                  ￥<span">0.00
            %li
              %ul.dldd
                %li 年化收益率
                %li
                  <span">10.00
                  \%
            %li
              %ul.dldd.dldd-input
                %li 验证码
                %li
                  %input{:style => "width:85px; height:30px;", :type => "text"}/
                %li
                  %img{:height => "30", :src => image_url("main/wytz6.jpg"), :width => "70"}/
                %li
                  %img{:height => "30", :src => image_url("main/wytz7.jpg"), :width => "35"}/
            %li.funds-ord
