.sign-page
  .container
    .row
      .col-md-7.col-sm-7
        .login-media.sign-in-img
          %img{:src => image_url("main/wooul-sign-media.png")}
      .col-md-5.col-sm-5
        .panel.panel-default
          .panel-heading
            .panel-title
              %h4 用户登录
          .panel-body.sign-panelbody
            = form_for(resource, :as => resource_name, html: {class: "form-signin form-horizontal"}, :url => session_path(resource_name)) do |f|
              .form-group
                %label.col-sm-offset-1.col-sm-2.control-label{:for => "inputEmail3"} 用户名：
                .col-sm-7
                  .input-group
                    .input-group-addon
                      %img{:src => image_url("main/wy-glyphicon-user.jpg")}
                    = f.text_field :login, :autofocus => true, class: "form-control ipt-email", placeholder: "注册手机号码/邮箱"
              .form-group
                %label.col-sm-offset-1.col-sm-2.control-label{:for => "inputPassword3"} 密码：
                .col-sm-7
                  .input-group
                    .input-group-addon
                      %img{:src => image_url("main/wy-glyphicon-lock.jpg") }
                    = f.password_field :password, class: "form-control", placeholder: "密码"
              .form-group
                .col-sm-offset-3.col-sm-3
                  .checkbox
                    %label
                      %input{:type => "checkbox"}
                        记住我
                .col-sm-offset-0.col-sm-4.forget-password
                  %a{:href => username_path } 忘记登录密码？
              .form-group.formsubmit
                .col-sm-offset-3.col-sm-7
                  %button.btn.btn-primary.btn-lg.btn-block{:type => "submit", :value => "登入"} 立即登录
          .panel-footer
            .row
              .col-sm-offset-3.col-sm-7.tell-wk
                您还不是沃客？
                %span
                  %a{:href => new_user_registration_path} 免费注册
