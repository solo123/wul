= form_for @stock do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :deposit_number
    = f.text_field :deposit_number
  .field
    = f.label :invest_type
    = f.text_field :invest_type
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :rate
    = f.text_field :rate
  .actions
    = f.submit 'Save'
